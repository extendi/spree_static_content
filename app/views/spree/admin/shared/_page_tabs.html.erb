<% content_for :page_title do %>
  <%= link_to Spree.t(:pages), spree.admin_pages_path %> /
  <%= @page.title %>
<% end %>

<% content_for :sidebar do %>
  <% if can? :admin, Spree::Page %>
    <ul class="nav nav-pills nav-stacked" data-hook="admin_page_tabs">
      <%= content_tag :li, :class => ('active' if current == 'Page Details') do %>
        <%= link_to_with_icon 'edit', Spree.t(:details), edit_admin_page_url(@page) %>
      <% end %>
      <%= content_tag :li, :class => ('active' if current == 'Translations') do %>
        <%= link_to_with_icon 'translate', Spree.t(:'i18n.translations'), admin_translations_url('pages', @page) %>
      <% end %>
    </ul>
  <% end %>
<% end %>